# Backend environment variables (safe defaults; copy to .env and fill real values)
# Example: copy this file to .env and set secure values before running locally or in CI

# MySQL connection
SPRING_DATASOURCE_URL=jdbc:mysql://localhost:3306/workshopdb?createDatabaseIfNotExist=true&useSSL=false&allowPublicKeyRetrieval=true
SPRING_DATASOURCE_USERNAME=workshop
SPRING_DATASOURCE_PASSWORD=change-me

# SSL / Truststore (if using managed DB requiring TLS)
DB_SSL_MODE=DISABLED
DB_TRUSTSTORE_PASSWORD=changeit
DB_TRUSTSTORE_TYPE=JKS

# Hikari pool tuning
DB_MAX_POOL_SIZE=10
DB_MIN_IDLE=2
DB_IDLE_TIMEOUT_MS=300000
DB_CONN_TIMEOUT_MS=30000
