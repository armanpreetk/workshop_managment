# Copy this file to .env and fill in real credentials
# spring-dotenv will load these into Spring Environment automatically

# JDBC URL to MySQL
SPRING_DATASOURCE_URL=jdbc:mysql://localhost:3306/workshopdb?createDatabaseIfNotExist=true&useSSL=false&allowPublicKeyRetrieval=true

# Database credentials
SPRING_DATASOURCE_USERNAME=root
SPRING_DATASOURCE_PASSWORD=change_me

# Optional HikariCP settings
DB_MAX_POOL_SIZE=10
DB_MIN_IDLE=2
DB_IDLE_TIMEOUT_MS=300000
DB_CONN_TIMEOUT_MS=30000
